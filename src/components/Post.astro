---
import { type CollectionEntry } from 'astro:content';

type Props = {
    post: CollectionEntry<'posts'>;
};
const { post } = Astro.props;

---
<article>
    <a href={`/blog/${post.slug}`} class="block p-4 border border-gray-200 rounded-lg shadow-md hover:shadow-lg">
        <h2 class="text-2xl font-bold">{post.data.title}</h2>
        <!-- <p class="text-gray-600">{post.description}</p> -->
    </a>
    <!-- <p class="mt-4 text-gray-600">Published on {new Date(post.data.date).toLocaleDateString()}</p> -->
    <!-- <p class="text-zinc-500 text-2xl line-clamp-2" ">
        {post.body}
    </p> -->
</article>